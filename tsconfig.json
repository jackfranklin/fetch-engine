{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist"
    },
    "filesGlob": [
        "src/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "src/index.test.ts",
        "src/index.ts",
        "src/Maybe.test.ts",
        "src/Maybe.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
